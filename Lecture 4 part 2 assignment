Conditional Statement


#include<iostream>
usingnamespace std;
int main()
 {
int marks
cout<<"student, please enter the marks t calculate the grade:";
cin>>marks;

if (marks>90)
{
cout<<"A";
}
if (marks<90 && marks >80)
{
cout<<"B";
}
if (marks><80 $$marks>70)
{
cout<<"C";
}
if (marks<70)
{
cout<<"Pass";
}



Conditional Statement

#include<iostream>
usingnamespace std;
int main()
 {
int marks
cout<<"student, please enter the marks t calculate the grade:";
cin>>marks;

if (marks>90)
{
cout<<"A";
}
else(marks<90 && marks >80)
{
cout<<"B";
}
else if (marks><80 $$marks>70)
{
cout<<"C";
}
else 
cout<<"Pass";
}
